FROM node:19.2
# SET work dir in container
WORKDIR /app
# copy packages files
COPY package.json .
COPY package-lock.json .
# install packages
RUN npm ci --silent
# COPY APP (without .dockerignore)
COPY . .
# Enviroment Variables
ENV FRONTEND_URL=http://localhost:3000
# RUN the App
EXPOSE 8080
CMD ["node", "index.js"]
